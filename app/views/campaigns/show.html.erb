<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Campaigns", campaigns_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @campaign.name %></h1>
        <p class="text-gray-600 text-lg"><%= @campaign.description %></p>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_campaign_path(@campaign), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Delete", campaign_path(@campaign), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <div class="border-t pt-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Notes</h2>
      <%= link_to "Add Note", new_campaign_note_path(@campaign), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
      
      <% if @campaign.notes.any? %>
        <div class="space-y-4">
          <% @campaign.notes.each do |note| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <h3 class="font-semibold text-gray-900 mb-2"><%= note.title %></h3>
              <p class="text-gray-600 mb-2"><%= note.content %></p>
              <div class="text-sm text-gray-500">
                Created: <%= note.created_at.strftime("%B %d, %Y") %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No notes yet.</p>
      <% end %>
    </div>
  </div>
</div>
