<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Campaigns</h1>
    <%= link_to "New Campaign", new_campaign_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @campaigns.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @campaigns.each do |campaign| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= campaign.name %></h3>
          <p class="text-gray-600 mb-4"><%= campaign.description %></p>
          <div class="flex space-x-2">
            <%= link_to "View", campaign_path(campaign), class: "text-blue-600 hover:text-blue-800" %>
            <%= link_to "Edit", edit_campaign_path(campaign), class: "text-green-600 hover:text-green-800" %>
            <%= link_to "Delete", campaign_path(campaign), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">No campaigns yet.</p>
      <%= link_to "Create your first campaign", new_campaign_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
