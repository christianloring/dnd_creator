<div class="flex-1 bg-gray-100 flex flex-col">
  <main class="flex-grow">
    <div class="max-w-screen-lg mx-auto px-4 py-8">

      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Welcome to your next adventure</h1>
        <p class="text-gray-600">Manage your characters, run epic battles, and plan unforgettable campaigns.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= render "home/player_tools" %>
        <%= render "home/dm_tools" %>
        <%= render "home/for_fun_tools" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-10">
        <%= render "home/daily_prompt" %>
        <%= render "home/recent_character" %>
        <%= render "home/recent_campaign" %>
      </div>

    </div>
  </main>
</div>
