<div class="flex justify-center mt-6">
    <%= link_to 'Create Note', new_character_note_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>

<div class="flex flex-wrap justify-center gap-6 mt-6">
    <% @notes.each do |note| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow p-5 w-full max-w-xs flex flex-col items-center md:basis-1/3">
                <h2 class="text-xl font-semibold mb-2 text-center"><%= note.title %></h2>
                <p class="mb-4 text-gray-700 text-center"><%= truncate(note.body, length: 100) %></p>
                <div class="flex space-x-3">
                    <%= link_to 'Show', character_note_path(note.notable.id, note), class: "text-blue-600 hover:underline" %>
                    <span>|</span>
                    <%= link_to 'Edit', edit_character_note_path(note.notable.id, note), class: "text-yellow-600 hover:underline" %>
                    <span>|</span>
                    <%= link_to 'Delete', character_note_path(note.notable.id, note), data: { confirm: 'Are you sure?', turbo_method: :delete }, class: "text-red-600 hover:underline" %>
                </div>
            </div>
    <% end %>
</div>
