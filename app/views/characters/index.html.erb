<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-4">Characters</h1>
    <%= link_to "Create New Character", new_character_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition" %>
  </div>

  <% if @characters.any? %>
    <div class="flex flex-wrap justify-center gap-6">
      <% @characters.each do |character| %>
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 w-full max-w-sm flex flex-col">
          <% if character.profile_picture.attached? %>
            <%= image_tag character.profile_picture, alt: "#{character.name}'s Profile Picture", width: 200, class: "mb-4 rounded-full mx-auto" %>
          <% end %>
          <h2 class="text-xl font-semibold mb-2 text-center"><%= character.name %></h2>
          <div class="text-sm text-gray-600 mb-4 text-center">
            <div><strong>Class:</strong> <%= character.character_class %></div>
            <div><strong>Level:</strong> <%= character.level %></div>
          </div>
          <div class="flex space-x-3 mt-auto justify-center">
            <%= link_to 'View', character_path(character), class: "text-blue-600 hover:underline" %>
            <span>|</span>
            <%= link_to 'Edit', edit_character_path(character), class: "text-yellow-600 hover:underline" %>
            <span>|</span>
            <%= link_to 'Delete', character_path(character), data: { confirm: 'Are you sure?', turbo_method: :delete }, class: "text-red-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-500 mb-4">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No characters yet</h3>
      <p class="text-gray-500 mb-6">Get started by creating your first character.</p>
      <%= link_to "Create New Character", new_character_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition" %>
    </div>
  <% end %>
</div>
