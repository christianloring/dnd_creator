<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">NPCs</h1>
    <div class="flex gap-3">
      <%= link_to "Create NPC", new_npc_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
      <%= link_to "Randomize NPC", randomize_npcs_path, class: "bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors" %>
    </div>
  </div>

  <% if @npcs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @npcs.each do |npc| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl font-semibold text-gray-900"><%= npc.name %></h2>
            <div class="flex gap-2">
              <%= link_to "View", npc_path(npc), class: "text-blue-600 hover:underline text-sm" %>
              <%= link_to "Edit", edit_npc_path(npc), class: "text-green-600 hover:underline text-sm" %>
                                 <%= link_to "Delete", npc_path(npc), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "text-red-600 hover:underline text-sm" %>
            </div>
          </div>

          <div class="text-gray-600 text-sm mb-4">
            <p class="line-clamp-3"><%= npc.description %></p>
          </div>

          <div class="text-xs text-gray-500">
            Created: <%= npc.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 text-6xl mb-4">ðŸ‘¥</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No NPCs yet</h3>
      <p class="text-gray-600 mb-6">Create your first NPC to get started!</p>
      <div class="flex gap-3 justify-center">
        <%= link_to "Create NPC", new_npc_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
        <%= link_to "Randomize NPC", randomize_npcs_path, class: "bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>
